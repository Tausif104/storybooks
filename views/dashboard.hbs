<section class="dashboard">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <h6>Dashboard</h6>
                <img class="profile-picture" src="{{image}}" alt="">
                <h3>Welcome {{name}}</h3>
                <p>Here are your stories</p>
                <a href="/stories/add" class="btn btn-primary story-btn"><i class="fas fa-plus-circle"></i> Add Story</a>

                {{#if stories}}
                    <table class="story-table table table-striped">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Date</th>
                                <th>Status</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each stories}}
                                <tr>
                                    <td><a href="/stories/{{_id}}">{{title}}</a></td>
                                    <td>{{formatDate createdAt 'MMMM Do YYYY, h:mm:ss a'}}</td>
                                    <td><span class="text-capitalize badge badge-success">{{status}}</span></td>
                                    <td>
                                        <a class="edit-icon" href="/stories/edit/{{_id}}">
                                            <i class="fas fa-edit"></i>
                                        </a>

                                        <form action="/stories/{{_id}}" method='POST' id="delete-form">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button type="submit" class="delete-button"><i class="fas fa-trash"></i></button>
                                        </form>
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                {{else}}
                    <p class="no-story-text text-center">You haven't created any story yet</p>
                {{/if}}
            </div>
        </div>
    </div>
</section>