<div class="container add-story-wrapper">
    <div class="row">
        <div class="col-xl-12">
            <h3>Edit Story</h3>
            <form action="/stories/{{story._id}}" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title" >Title</label>
                    <input type="text" class="form-control" id="title" name="title" value='{{story.title}}'>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" name="status" id="status">
                        {{#select story.status}}
                        <option value="public" selected>Public</option>
                        <option value="private">Private</option>
                        {{/select}}
                    </select>
                </div>
                <div class="form-group">
                    <label for="body">Tell us your story</label>
                    <textarea name="body" id="body" cols="30" rows="10" class="form-control">{{story.body}}</textarea>
                </div>
                <input type="submit" class="btn btn-success" value="Update">
                <a href="/dashboard" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>